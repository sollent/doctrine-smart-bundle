{% extends '@DoctrineSmartBundle/base.html.twig' %}

{% block main %}
    <ol class="list-group list-group-numbered">
        {% for entity in entities %}
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">{{ entity.shortName }}</div>
                    Entity namespace (FQCN): <b>{{ entity.name }}</b>
                </div>
                <span class="badge bg-primary rounded-pill">{{ entity.propertiesCount }}</span>
            </li>
        {% endfor %}
    </ol>

    <div class="d-grid gap-2">
        <a href="{{ path('new-action') }}" style="margin: 30px 0" class="btn btn-primary btn-lg" type="button">New entity</a>
    </div>
{% endblock %}
